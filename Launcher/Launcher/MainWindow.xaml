<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="Launcher" Height="620" Width="1080">
    <Grid>
        <Image Stretch="UniformToFill" Source="image1.png"/>
        <TextBlock x:Name="VersionText" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Foreground="White" Margin="0,100, 0, 0"/>
        <Button x:Name="PlayButton" Content="Checking for Updates" Click="PlayButton_Click" Height="60" FontSize="28" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" MinWidth="150" Margin="387,279,0,0"/>
    </Grid>
</Window>
